@{
    Layout = "~/_basicLayout.cshtml";
    string errorMessage = "";
}
@if (IsPost)
{
    var login = Request["login"];
    var password = Request["password"];

    if(AwardsWebPL.Models.Auth.CanLogin(login, password))
    {
        FormsAuthentication.SetAuthCookie(login, true);
        Response.Redirect("/");
    }
    errorMessage = "Error";
}



<div>
    <p style="background: red">@errorMessage</p> 
    <form action="~/Pages/signIn.cshtml" method="post">
        <div>Login <input type="text" name="login" value="" /></div>
        <div>Password <input type="password" name="password" value="" /></div>
        <button>Sign in</button>
    </form>
</div>
